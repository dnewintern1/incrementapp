<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="Incrementing"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/incrementbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incrementOnClick"
            android:text="Increment by 1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="50dp"
            android:text="Decrimenting"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/decrimentbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:onClick="decrimentOnclick"
            android:text="Decriment by 1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/otheroperationbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="otheroperationOnclick"
            android:text="other operations"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>